<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context="edu.gatech.cs2340.SpaceTrader.views.UniverseMap">


    <RadioGroup
        android:id="@+id/group"
        android:layout_width="336dp"
        android:layout_height="277dp"
        android:checkedButton="@+id/solar1"
        android:fontFamily="@font/dosis_medium"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <RadioButton
            android:id="@+id/solar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />

        <RadioButton
            android:id="@+id/solar10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dosis_medium"
            android:textColor="@color/design_default_color_primary" />
    </RadioGroup>

    <TextView
        android:id="@+id/universeMap"
        android:layout_width="291dp"
        android:layout_height="42dp"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="@string/uniMap"
        android:textColor="@color/design_default_color_primary"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/locationText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="389dp"
        android:layout_height="32dp"
        android:fontFamily="@font/dosis_medium"
        android:gravity="center"
        android:text="@string/currentLocation"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/fuelText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/universeMap"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/fuelText"
        android:layout_width="389dp"
        android:layout_height="32dp"
        android:fontFamily="@font/dosis_medium"
        android:gravity="center"
        android:text="@string/currentFuel"
        android:textColor="@color/design_default_color_primary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationText" />

    <Button
        android:id="@+id/toSSMap"
        android:layout_width="119dp"
        android:layout_height="55dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/audiowide"
        android:text="@string/travel"
        android:textColor="#673AB7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>